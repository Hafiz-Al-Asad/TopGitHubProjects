<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/projectList">

    <fragment
        android:id="@+id/projectList"
        android:name="com.hafiz.githubrepositorysearch.ui.fragment.ProjectListFragment"
        android:label="@string/repository_list_fragment_label"
        tools:layout="@layout/project_list_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/projectDetails" />
    </fragment>
    <fragment
        android:id="@+id/projectDetails"
        android:name="com.hafiz.githubrepositorysearch.ui.fragment.ProjectDetailsFragment"
        android:label="@string/repository_details_label"
        tools:layout="@layout/project_details_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/projectList" />
    </fragment>
</navigation>